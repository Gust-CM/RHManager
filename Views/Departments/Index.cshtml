@model IEnumerable<RHManager.Models.Department>
@using System.Linq

@{
    ViewData["Title"] = "Departamentos";
}

<h2 class="fw-bold mb-1">
    <i class="bi bi-building me-2"></i>Departamentos
</h2>
<p class="text-muted mb-4">
    Estructura organizacional: departamentos registrados en la empresa.
</p>

<div class="text-end mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i>Nuevo Departamento
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info mt-3">
        No hay departamentos registrados todavía.
        <a asp-action="Create" class="btn btn-sm btn-primary ms-2">
            <i class="bi bi-plus-circle me-1"></i> Crear primer departamento
        </a>
    </div>
}
else
{
    <table class="table table-custom">
        <thead>
            <tr>
                <th>Nombre</th>
                <th class="text-end">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var d in Model)
            {
                <tr>
                    <td>@d.Name</td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@d.DepartmentId" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@d.DepartmentId" class="btn btn-sm btn-outline-secondary">
                            <i class="bi bi-eye-fill"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@d.DepartmentId" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
