@model IEnumerable<RHManager.Models.LeaveRequest>

@{
    ViewData["Title"] = "Solicitudes de Permiso";
}

<h2 class="fw-bold mb-4">
    <i class="bi bi-calendar-check me-2"></i>Solicitudes de Permiso
</h2>

<!-- FILTROS -->
<form method="get" class="row g-2 mb-4">
    <div class="col-md-3">
        <input type="text"
               name="search"
               value="@ViewData["Search"]"
               class="form-control"
               placeholder="Buscar por empleado" />
    </div>

    <div class="col-md-2">
        <input type="date"
               name="startDate"
               value="@ViewData["StartDate"]"
               class="form-control"
               placeholder="Fecha inicio" />
    </div>

    <div class="col-md-2">
        <input type="date"
               name="endDate"
               value="@ViewData["EndDate"]"
               class="form-control"
               placeholder="Fecha fin" />
    </div>

    <div class="col-md-2">
        <select name="status" class="form-select">
            <option value="">Todos</option>
            @foreach (LeaveStatus s in Enum.GetValues(typeof(LeaveStatus)))
            {
                var intValue = (int)s;
                <option value="@intValue" selected="@(ViewData["Status"]?.ToString() == intValue.ToString())">
                    @s
                </option>
            }
        </select>
    </div>

    <div class="col-md-3">
        <button type="submit" class="btn btn-outline-primary">
            <i class="bi bi-search me-1"></i> Buscar
        </button>

        <a asp-action="Index" class="btn btn-outline-secondary ms-2">
            Limpiar
        </a>
    </div>
</form>

<div class="text-end mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> Nueva Solicitud
    </a>
</div>

<table class="table table-custom">
    <thead>
        <tr>
            <th>Empleado</th>
            <th>Inicio</th>
            <th>Fin</th>
            <th>Estado</th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@($"{r.Employee?.FirstName ?? ""} {r.Employee?.LastName ?? ""}")</td>
                <td>@r.StartDate.ToShortDateString()</td>
                <td>@r.EndDate.ToShortDateString()</td>
                <td>
                    @switch ((LeaveStatus)r.Status)
                    {
                        case LeaveStatus.Pending:
                            <span class="badge bg-warning text-dark">Pendiente</span>
                            break;
                        case LeaveStatus.Approved:
                            <span class="badge bg-success">Aprobado</span>
                            break;
                        case LeaveStatus.Rejected:
                            <span class="badge bg-danger">Rechazado</span>
                            break;
                    }
                </td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@r.LeaveRequestId" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-pencil-fill"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@r.LeaveRequestId" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-eye-fill"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@r.LeaveRequestId" class="btn btn-sm btn-outline-danger">
                        <i class="bi bi-trash-fill"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
