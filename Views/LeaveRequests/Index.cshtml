@model IEnumerable<RHManager.Models.LeaveRequest>
@using System.Linq
@using RHManager.Models

@{
    ViewData["Title"] = "Solicitudes de Permiso";
}

<h2 class="fw-bold mb-1">
    <i class="bi bi-calendar-check me-2"></i>Solicitudes de Permiso
</h2>
<p class="text-muted mb-4">
    Gestión de las solicitudes de permiso de los empleados.
</p>

<div class="text-end mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> Nueva Solicitud
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info mt-3">
        No hay solicitudes de permiso registradas todavía.
        <a asp-action="Create" class="btn btn-sm btn-primary ms-2">
            <i class="bi bi-plus-circle me-1"></i> Crear primera solicitud
        </a>
    </div>
}
else
{
    <table class="table table-custom">
        <thead>
            <tr>
                <th>Empleado</th>
                <th>Inicio</th>
                <th>Fin</th>
                <th>Estado</th>
                <th class="text-end">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@($"{r.Employee?.FirstName} {r.Employee?.LastName}")</td>
                    <td>@r.StartDate.ToShortDateString()</td>
                    <td>@r.EndDate.ToShortDateString()</td>
                    <td>
                        @{
                            var status = (LeaveStatus)r.Status;
                            string badgeClass = status switch
                            {
                                LeaveStatus.Approved => "bg-success",
                                LeaveStatus.Rejected => "bg-danger",
                                LeaveStatus.Pending => "bg-warning",
                                _ => "bg-secondary"
                            };
                        }
                        <span class="badge @badgeClass">@status</span>
                    </td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@r.LeaveRequestId" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@r.LeaveRequestId" class="btn btn-sm btn-outline-secondary">
                            <i class="bi bi-eye-fill"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@r.LeaveRequestId" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
