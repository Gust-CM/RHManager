@model RHManager.Models.LeaveRequest

<h2 class="fw-bold mb-4">
    <i class="bi bi-plus-circle me-2"></i>Nueva Solicitud
</h2>

<form asp-action="Create" class="card card-custom">

    <div class="col-md-6">
        <label asp-for="EmployeeId" class="form-label fw-semibold"></label>
        <select asp-for="EmployeeId" class="form-select shadow-sm" asp-items="ViewBag.EmployeeId">
            <option value="">Seleccione un empleado...</option>
        </select>
        <span asp-validation-for="EmployeeId" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="StartDate" class="form-label fw-bold"></label>
            <input asp-for="StartDate" type="date" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="EndDate" class="form-label fw-bold"></label>
            <input asp-for="EndDate" type="date" class="form-control" />
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Reason" class="form-label fw-bold"></label>
        <textarea asp-for="Reason" class="form-control" rows="3"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="Status" class="form-label fw-bold">Estado</label>
        <select asp-for="Status" class="form-select">
            <option value="0">Pendiente</option>
            <option value="1">Aprobado</option>
            <option value="2">Rechazado</option>
        </select>
    </div>

    <div class="text-end mt-3">
        <button class="btn btn-primary"><i class="bi bi-save me-1"></i>Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>

</form>
