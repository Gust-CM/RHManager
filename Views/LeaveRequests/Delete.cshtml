@model RHManager.Models.LeaveRequest

<div class="card card-custom">

    <h3 class="fw-bold text-danger mb-3">
        <i class="bi bi-exclamation-triangle me-2"></i>Eliminar Solicitud
    </h3>

    <p class="text-muted">¿Deseas eliminar esta solicitud?</p>

    <ul class="list-group list-group-flush mb-3">
        <li class="list-group-item d-flex justify-content-between">
            <strong>Empleado</strong>
            <span>@($"{Model.Employee?.FirstName} {Model.Employee?.LastName}")</span>
        </li>
        <li class="list-group-item d-flex justify-content-between">
            <strong>Rango</strong>
            <span>@Model.StartDate.ToShortDateString() - @Model.EndDate.ToShortDateString()</span>
        </li>
    </ul>

    <form asp-action="Delete">
        <input type="hidden" asp-for="LeaveRequestId" />

        <button class="btn btn-danger"><i class="bi bi-trash"></i>Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>

</div>
