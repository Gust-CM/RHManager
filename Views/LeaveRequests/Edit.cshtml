@model RHManager.Models.LeaveRequest
@{
    ViewData["Title"] = "Editar Permiso";
}

<div class="container-fluid px-4">
    <h2 class="mb-3 fw-bold">Editar solicitud de permiso</h2>
    <p class="text-muted mb-4">Modifique los datos necesarios y guarde los cambios.</p>

    <div class="card shadow-sm border-0 card-custom">
        <div class="card-body">

            <form asp-action="Edit" method="post" class="row g-3">

                <!-- ID oculto -->
                <input type="hidden" asp-for="LeaveRequestId" />

                <!-- EMPLEADO -->
                <div class="col-md-6">
                    <label asp-for="EmployeeId" class="form-label fw-semibold"></label>
                    <select asp-for="EmployeeId" class="form-select shadow-sm" asp-items="ViewBag.EmployeeId">
                        <option value="">Seleccione un empleado...</option>
                    </select>
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>

                <!-- FECHA INICIO -->
                <div class="col-md-3">
                    <label asp-for="StartDate" class="form-label fw-semibold"></label>
                    <input asp-for="StartDate" class="form-control shadow-sm" type="date" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <!-- FECHA FINAL -->
                <div class="col-md-3">
                    <label asp-for="EndDate" class="form-label fw-semibold"></label>
                    <input asp-for="EndDate" class="form-control shadow-sm" type="date" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

                <!-- MOTIVO -->
                <div class="col-12">
                    <label asp-for="Reason" class="form-label fw-semibold"></label>
                    <textarea asp-for="Reason" class="form-control shadow-sm" rows="3"></textarea>
                    <span asp-validation-for="Reason" class="text-danger"></span>
                </div>

                <!-- ESTADO -->
                <div class="col-md-4">
                    <label class="form-label fw-semibold">Estado</label>
                    <select asp-for="Status" class="form-select shadow-sm">
                        <option value="0" class="text-warning">Pendiente</option>
                        <option value="1" class="text-success">Aprobado</option>
                        <option value="2" class="text-danger">Rechazado</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <!-- BOTONES -->
                <div class="col-12 mt-4 d-flex justify-content-between">

                    <a asp-action="Index"
                       class="btn btn-outline-secondary px-4 py-2 btn-animated">
                        <i class="bi bi-arrow-left-short me-1"></i> Volver
                    </a>

                    <button type="submit"
                            class="btn btn-primary px-4 py-2 btn-animated">
                        <i class="bi bi-check2-circle me-1"></i> Guardar cambios
                    </button>

                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
