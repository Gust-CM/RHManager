@model RHManager.Models.Employee
@{
    ViewData["Title"] = "Detalles del Empleado";
}

<div class="card card-custom">

    <h3 class="fw-bold mb-3">
        <i class="bi bi-person-badge me-2"></i>Detalles del Empleado
    </h3>

    <ul class="list-group list-group-flush">
        <li class="list-group-item d-flex justify-content-between">
            <strong>ID</strong>
            <span>@Model.EmployeeId</span>
        </li>

        <li class="list-group-item d-flex justify-content-between">
            <strong>Nombre</strong>
            <span>@($"{Model.FirstName} {Model.LastName}")</span>
        </li>

        <li class="list-group-item d-flex justify-content-between">
            <strong>Email</strong>
            <span>@Model.Email</span>
        </li>

        <li class="list-group-item d-flex justify-content-between">
            <strong>Puesto</strong>
            <span>@Model.Position?.Name</span>
        </li>

        <li class="list-group-item d-flex justify-content-between">
            <strong>Fecha Contratación</strong>
            <span>@Model.HireDate.ToShortDateString()</span>
        </li>

        <li class="list-group-item d-flex justify-content-between">
            <strong>Estado</strong>
            <span>@(Model.IsActive ? "Activo" : "Inactivo")</span>
        </li>
    </ul>

    <div class="text-end mt-4">
        <a asp-action="Edit" asp-route-id="@Model.EmployeeId" class="btn btn-primary">
            <i class="bi bi-pencil"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>

</div>
