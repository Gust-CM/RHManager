@model RHManager.Models.Employee
@{
    ViewData["Title"] = "Nuevo Empleado";
}

<h2 class="fw-bold mb-4">
    <i class="bi bi-plus-circle me-2"></i>Nuevo Empleado
</h2>

<form asp-action="Create" class="card card-custom">

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="FirstName" class="form-label fw-bold"></label>
            <input asp-for="FirstName" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="LastName" class="form-label fw-bold"></label>
            <input asp-for="LastName" class="form-control" />
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label fw-bold"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="HireDate" class="form-label fw-bold"></label>
            <input asp-for="HireDate" type="date" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="PositionId" class="form-label fw-bold">Puesto</label>
            <select asp-for="PositionId" class="form-select" asp-items="ViewBag.PositionId"></select>
        </div>
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label fw-bold"></label>
    </div>

    <div class="text-end mt-3">
        <button class="btn btn-primary"><i class="bi bi-save me-1"></i>Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>

</form>
