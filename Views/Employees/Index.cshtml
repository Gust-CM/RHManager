@model IEnumerable<RHManager.Models.Employee>

@{
    ViewData["Title"] = "Empleados";
}

<h2 class="fw-bold mb-4">
    <i class="bi bi-people me-2"></i>Empleados
</h2>

<!-- FILTROS -->
<form method="get" class="row g-2 mb-4">
    <div class="col-md-4">
        <input type="text"
               name="search"
               value="@ViewData["Search"]"
               class="form-control"
               placeholder="Buscar por nombre o email" />
    </div>

    <div class="col-md-3">
        <select name="isActive" class="form-select">
            <option value="">Todos</option>
            <option value="true" selected="@(ViewData["IsActive"]?.ToString() == "True")">
                Activos
            </option>
            <option value="false" selected="@(ViewData["IsActive"]?.ToString() == "False")">
                Inactivos
            </option>
        </select>
    </div>

    <div class="col-md-3">
        <button type="submit" class="btn btn-outline-primary">
            <i class="bi bi-search me-1"></i> Buscar
        </button>

        <a asp-action="Index" class="btn btn-outline-secondary ms-2">
            Limpiar
        </a>
    </div>
</form>

<div class="text-end mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> Nuevo Empleado
    </a>
</div>

<p class="text-muted mb-2">
    Mostrando <strong>@Model.Count()</strong> empleados
</p>


<table class="table table-custom">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Puesto</th>
            <th>Estado</th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@($"{e.FirstName} {e.LastName}")</td>
                <td>@e.Email</td>
                <td>@e.Position?.Name</td>
                <td>
                    @if (e.IsActive)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactivo</span>
                    }
                </td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@e.EmployeeId" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-pencil-fill"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@e.EmployeeId" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-eye-fill"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@e.EmployeeId" class="btn btn-sm btn-outline-danger">
                        <i class="bi bi-trash-fill"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
