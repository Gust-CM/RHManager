@model IEnumerable<RHManager.Models.Employee>
@{
    ViewData["Title"] = "Empleados";
}

<h2 class="fw-bold mb-4">
    <i class="bi bi-people me-2"></i>Empleados
</h2>

<div class="text-end mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> Nuevo Empleado
    </a>
</div>

<table class="table table-custom">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Puesto</th>
            <th>Antigüedad</th>   @* NUEVO *@
            <th>Estado</th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@($"{e.FirstName} {e.LastName}")</td>
                <td>@e.Email</td>
                <td>@e.Position?.Name</td>

                <td>
                    @* NUEVO: cálculo simple de años *@
                    @{
                        var years = DateTime.Now.Year - e.HireDate.Year;
                    }
                    @years años
                </td>

                <td>
                    @if (e.IsActive)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactivo</span>
                    }
                </td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@e.EmployeeId" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-pencil-fill"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@e.EmployeeId" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-eye-fill"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@e.EmployeeId" class="btn btn-sm btn-outline-danger">
                        <i class="bi bi-trash-fill"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
