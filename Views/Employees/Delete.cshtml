@model RHManager.Models.Employee
@{
    ViewData["Title"] = "Eliminar Empleado";
}

<div class="card card-custom">

    <h3 class="fw-bold text-danger mb-3">
        <i class="bi bi-exclamation-triangle me-2"></i>Eliminar Empleado
    </h3>

    <p class="text-muted">¿Estás seguro que deseas eliminar este empleado?</p>

    <ul class="list-group list-group-flush mb-3">
        <li class="list-group-item d-flex justify-content-between">
            <strong>Nombre</strong>
            <span>@($"{Model.FirstName} {Model.LastName}")</span>
        </li>

        <li class="list-group-item d-flex justify-content-between">
            <strong>Email</strong>
            <span>@Model.Email</span>
        </li>

        <li class="list-group-item d-flex justify-content-between">
            <strong>Puesto</strong>
            <span>@Model.Position?.Name</span>
        </li>
    </ul>

    <form asp-action="Delete">
        <input type="hidden" asp-for="EmployeeId" />

        <button class="btn btn-danger">
            <i class="bi bi-trash"></i>Eliminar
        </button>

        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>

</div>
