@model RHManager.Models.Position
@{
    ViewData["Title"] = "Detalles del Puesto";
}

<div class="card card-custom">

    <h3 class="fw-bold mb-3">
        <i class="bi bi-info-circle me-2"></i>Detalles del Puesto
    </h3>

    <ul class="list-group list-group-flush">
        <li class="list-group-item d-flex justify-content-between">
            <strong>ID</strong>
            <span>@Model.PositionId</span>
        </li>
        <li class="list-group-item d-flex justify-content-between">
            <strong>Nombre</strong>
            <span>@Model.Name</span>
        </li>
        <li class="list-group-item d-flex justify-content-between">
            <strong>Departamento</strong>
            <span>@Model.Department?.Name</span>
        </li>
    </ul>

    <div class="text-end mt-4">
        <a asp-action="Edit" asp-route-id="@Model.PositionId" class="btn btn-primary">
            <i class="bi bi-pencil"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>

</div>
