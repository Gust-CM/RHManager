@model RHManager.Models.Position
@{
    ViewData["Title"] = "Eliminar Puesto";
}

<div class="card card-custom">

    <h3 class="fw-bold text-danger mb-3">
        <i class="bi bi-exclamation-triangle me-2"></i>Eliminar Puesto
    </h3>

    <p class="text-muted">¿Estás seguro que deseas eliminar este puesto?</p>

    <ul class="list-group list-group-flush mb-3">
        <li class="list-group-item d-flex justify-content-between">
            <strong>Nombre</strong>
            <span>@Model.Name</span>
        </li>
        <li class="list-group-item d-flex justify-content-between">
            <strong>Departamento</strong>
            <span>@Model.Department?.Name</span>
        </li>
    </ul>

    <form asp-action="Delete">
        <input type="hidden" asp-for="PositionId" />

        <button class="btn btn-danger">
            <i class="bi bi-trash"></i>Eliminar
        </button>

        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>

</div>
