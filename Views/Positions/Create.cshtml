@model RHManager.Models.Position
@{
    ViewData["Title"] = "Nuevo Puesto";
}

<h2 class="fw-bold mb-4">
    <i class="bi bi-plus-circle me-2"></i>Nuevo Puesto
</h2>

<form asp-action="Create" class="card card-custom">

    <div class="mb-3">
        <label asp-for="Name" class="form-label fw-bold"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DepartmentId" class="form-label fw-bold">Departamento</label>
        <select asp-for="DepartmentId" class="form-select" asp-items="ViewBag.DepartmentId"></select>
    </div>

    <div class="text-end mt-3">
        <button class="btn btn-primary">
            <i class="bi bi-save me-1"></i>Guardar
        </button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>

</form>
