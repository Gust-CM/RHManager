@model RHManager.Models.Position
@{
    ViewData["Title"] = "Editar Puesto";
}

<h2 class="fw-bold mb-4">
    <i class="bi bi-pencil-square me-2"></i>Editar Puesto
</h2>

<form asp-action="Edit" class="card card-custom">

    <input type="hidden" asp-for="PositionId" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label fw-bold"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="DepartmentId" class="form-label fw-bold">Departamento</label>
        <select asp-for="DepartmentId" class="form-select" asp-items="ViewBag.DepartmentId"></select>
    </div>

    <div class="text-end mt-3">
        <button class="btn btn-primary">
            <i class="bi bi-save me-1"></i>Guardar Cambios
        </button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>

</form>
